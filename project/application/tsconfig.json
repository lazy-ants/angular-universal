{
    "compileOnSave": false,
    "compilerOptions": {
        "downlevelIteration": true,
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./src/app/*"],
            "@configs/*": ["./src/app/configs/*"],
            "@modules/*": ["./src/app/modules/*"],
            "@core/*": ["./src/app/modules/core/*"],
            "@shared/*": ["./src/app/modules/shared/*"],
            "@pages/*": ["./src/app/pages/*"]
        }
    }
}
